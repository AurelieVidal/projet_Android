<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAccueilActivity"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Votre compte Utilisateur"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:paddingBottom="0px"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Nom"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:paddingBottom="0px"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/nom_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nom " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Prenom"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:paddingBottom="0px"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/prenom_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Prenom " />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Pseudo"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:paddingBottom="0px"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/pseudo_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Pseudo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Liste de films favoris"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:paddingBottom="0px"
            android:layout_weight="1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/liste_film_favori_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/mise_a_jour_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mettre Ã  jour les informations" />

        <Button
            android:id="@+id/deconexion_compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="deconexion" />
    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>